<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_list"
        android:id="@+id/rlSlider"
        tools:context=".SliderScreenActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Thanks for downloading"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvThanksFor"
            android:layout_above="@+id/tvMyList"
            />

    <TextView
        android:id="@+id/tvMyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:paddingBottom="50dp"
        android:textColor="@color/secondary"
        android:text="My List"
        android:textSize="35sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Manage and keep a track of your tasks with ease."
            android:layout_centerHorizontal="true"
            android:id="@+id/tvDetails"
            android:layout_below="@+id/ivLogo"
            android:paddingTop="50dp"
            />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text="Next"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/secondary"
        android:background="@android:color/transparent"
        />


    </RelativeLayout>